generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") 
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  task       String?
  stateOrder  String     
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

model Column {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  order     Int
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}